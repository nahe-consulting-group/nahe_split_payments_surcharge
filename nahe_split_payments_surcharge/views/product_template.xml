<odoo>
    <record id="view_product_product_form_inherit_surcharge" model="ir.ui.view">
        <field name="name">product.product.form.inherit.nahe.surcharge</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="is_surcharge_product"/>
            </xpath>
        </field>
    </record>
</odoo>
